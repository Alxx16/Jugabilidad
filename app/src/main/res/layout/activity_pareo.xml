<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PareoActivity"
    android:orientation="vertical"
    android:background="@drawable/ic_fondo">

        <ImageView
            android:id="@+id/imgPareo1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:nextFocusLeft="@id/pgrPareo"
            android:src="@drawable/atras_icono" />

        <TextView
            android:id="@+id/lblFrograning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/poppins"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imgPareo1"
            android:text="Frograming"
            android:textColor="@color/white"
            android:textSize="20dp" />

    <ImageView
        android:id="@+id/icono_home"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/lblFrograning"
        android:src="@drawable/ic_home_icono"/>

    <ImageView
        android:id="@+id/icono_perfil"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/icono_home"
        android:src="@drawable/perfil_icono"/>

    <ImageView
        android:id="@+id/icono_cerrar_secion"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/icono_perfil"
        android:src="@drawable/cerrar_sesion_icono"/>

    <ProgressBar
        android:id="@+id/pgrPareo"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/lblFrograning"
        android:indeterminateDrawable="@drawable/progress_bar_jugabilidades"
        android:max="11"
        android:min="1"
        android:minWidth="300dp"
        android:minHeight="50dp"

        />

    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pgrPareo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:text="Eligé la combinación correcta"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <ListView
        android:id="@+id/lstPareo1"
        android:layout_width="180dp"
        android:layout_height="475dp"
        android:layout_below="@id/lblTitulo"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:backgroundTint="@color/white"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="45dp"
        android:fontFamily="@font/poppins" />

    <ListView
        android:id="@+id/lstPareo2"
        android:layout_width="180dp"
        android:layout_height="475dp"
        android:layout_below="@id/lblTitulo"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:background="#00000000"
        android:backgroundTint="@color/white"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="15dp"
        android:fontFamily="@font/poppins" />

    <Button
        android:id="@+id/btnPareoSiguiente"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:enabled="false"
        android:fontFamily="@font/poppins"
        android:text="Siguiente"
        app:backgroundTint = "@null"
        android:background="@drawable/shape_jugabilidad2_boton_corfirmar"
        android:textColor="@color/black"
        android:onClick="siguienteP"
        />

</RelativeLayout>